@model mvcIdentity.Models.Topic

@{
    ViewBag.Title = "Edit";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Create Courses</h4>
                    </div>
                    @using (Html.BeginForm("Edit", "Topics", FormMethod.Post, new { enctype = "multipart/form-data"}))
                    {@Html.AntiForgeryToken()
                <div class="content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Top_Id)
                    @Html.HiddenFor(model => model.Top_Photo)

                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Top_Name, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Top_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Top_Name, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Top_Photo, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    <div class="image-upload" style="width: 90px;">
                                        <label for="file-input">
                                            @if (Model.Top_Photo == null)
                                            {
                                                <img src="~/Attachs/Topic/upload-photo-icon-21.jpg" style="width: 87%;margin-left: 15px;" />
                                            }
                                            else
                                            {
                                                <img src="~/Attachs/Topic/@Html.ValueFor(n => n.Top_Photo)" style="width: 87%;margin-left: 15px;" />
                                            }
                                        </label>
                                        <input id="file-input" type="file" name="photo" style="display:none;" />
                                        @Html.ValidationMessageFor(model => model.Top_Photo, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Edit" class="btn btn-info btn-fill btn-wd" />
                        </div>
                    </div>
                    <div class="clearfix"></div>

                </div>
                }
                    <div style="padding:20px;">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>