<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Images/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Images/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewBag.Title</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!--  CSS     -->
    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <style>
         
        .sear {
            margin-left: 10% !important;
            margin-top: 15px !important;
        }
    
    </style>
</head>
<body style="padding:0;">

    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">

            <!--
                Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        Course
                    </a>
                </div>

                <ul class="nav">
                    <li class="@ViewBag.index">
                        <a href="/Home/Index">
                            <i class="ti-panel"></i>
                            <p>Courses</p>
                        </a>
                    </li>

                    @if (Request.IsAuthenticated)
                    {

                        <li class="@ViewBag.profile">
                            <a href="/Home/profile">
                                <i class="ti-user"></i>
                                <p>User Profile</p>
                            </a>
                        </li>
                    }
                <li class="@ViewBag.table">
                    @if (User.IsInRole("Instructor"))
                    {
                    <a href="/Home/getCoursesByIns">
                        <i class="ti-view-list-alt"></i>
                        <p>Table List</p>
                    </a>
                    }
                    else if (User.IsInRole("Student"))
                    {
                    <a href="/Home/getCourseByUser">
                        <i class="ti-view-list-alt"></i>
                        <p>Table List</p>
                    </a>
                    }

                </li>

                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Admins"))
                        {
                            <li class="@ViewBag.table">
                                <a href="/Topics/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Topic List</p>
                                </a>
                            </li>
                            <li class="@ViewBag.table">
                                <a href="/Courses/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Courses List</p>
                                </a>
                            </li>
                            <li class="@ViewBag.table">
                                <a href="/Roles/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Roles List</p>
                                </a>
                            </li>
                        }
                        @*if (ViewBag.usertype == "Admins")
                        {
                            <li class="@ViewBag.table">
                                <a href="/Topics/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Topic List</p>
                                </a>
                            </li>
                            <li class="@ViewBag.table">
                                <a href="/Courses/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Courses List</p>
                                </a>
                            </li>
                            <li class="@ViewBag.table">
                                <a href="/Roles/Index">
                                    <i class="ti-view-list-alt"></i>
                                    <p>Roles List</p>
                                </a>
                            </li>
                        }*@
                    }
                    <li class="@ViewBag.contact">
                        <a href="/Home/Contact">
                            <i class="ti-bell"></i>
                            <p>Contact</p>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="ti-bell"></i>
                            <p>Notifications</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <div style="display: flex;">
                            @using (@Ajax.BeginForm(
                                  "search",
                                  "Home",
                                  new AjaxOptions
                                  {
                                      UpdateTargetId = "searchdata", // <-- DOM element ID to update
                                                  HttpMethod = "POST", // <-- HTTP method,
                                                  InsertionMode = InsertionMode.Replace, // <-- Replace the content of DOM element
                                                  LoadingElementId = "loading"
                                  }))
                            {
                                <input id="search-focus" name="searchname" type="search" class="form-control navbar-brand sear" placeholder="Search here" />

                            }
                            <img src="~/Images/Spinner-1s-200px.gif" id="loading" style="width: 66px;
                                                                                        height: 42px;
                                                                                        margin-top: 15px;
                                                                                        margin-left: 27px;
                                                                                        border-radius: 10px;
                                                                                        display:none;" />
                        </div>


                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-panel"></i>
                                    <p>Stats</p>
                                </a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-bell"></i>
                                    <p class="notification">5</p>
                                    <p>Notifications</p>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Notification 1</a></li>
                                    <li><a href="#">Notification 2</a></li>
                                    <li><a href="#">Notification 3</a></li>
                                    <li><a href="#">Notification 4</a></li>
                                    <li><a href="#">Another notification</a></li>
                                </ul>
                            </li>
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>
                        </ul>


                    </div>
                </div>
            </nav>

            <div id="searchdata">

            </div>
            @RenderBody()



            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>

                            <li>
                                <a href="#">
                                    Creative Tim
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Licenses
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="#">.</a>
                    </div>
                </div>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
   
</body>
</html>
