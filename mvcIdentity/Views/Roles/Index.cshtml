@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Topics</h4>
                        <p class="category">All Topic table</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <div style="text-align: end;padding-right: 8%;">
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
                        </div>
                        <table class="table table-striped table-hover">

                            <thead>

                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td style="text-align: end;">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onClick = "return confirm('are you want to delete')" })
                                        </td>




                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>