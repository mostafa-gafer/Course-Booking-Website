@model IEnumerable<mvcIdentity.Models.Topic>
@{
    ViewBag.Title = "Dashboard";
    ViewBag.index = "active";
    Layout = "~/Views/Shared/_layout.cshtml";
}


<nav class="navbar navbar-default" style="background-color: white;">
    <div class="container-fluid">

        <div class="navbar-collapse">
            <ul class="nav navbar-nav ">
                @foreach (var item in Model)
                {
                    <li style="float: left;">
                        @Ajax.ActionLink(item.Top_Name,
                        "displayCrs",
                        "Home",
                        new { id = item.Top_Id },
                        new AjaxOptions
                        {
                            UpdateTargetId = "data", // <-- DOM element ID to update
                            HttpMethod = "Get", // <-- HTTP method,
                            InsertionMode = InsertionMode.Replace // <-- Replace the content of DOM element

                            })




                    </li>
                }

            </ul>


        </div>
    </div>
</nav>
<div class="content">
    <div class="container-fluid">
        <div id="data">
            <div style="background-color: white;
                min-height: 337px;
                padding: 30px;
                text-align: center;">
                
                <h1>Welcome</h1>
                <p>Select your Courses from each category</p>
            </div>
           
        </div>
    </div>
</div>




@section scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery-3.3.1.slim.js")
    @Scripts.Render("~/Scripts/popper.min.js")

}

