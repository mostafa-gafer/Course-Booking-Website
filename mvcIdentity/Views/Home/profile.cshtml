@model mvcIdentity.Models.ApplicationUser

@{
    ViewBag.profile = "active";
    ViewBag.Title = "profile";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">


            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Profile</h4>
                    </div>
                    <div class="content">
                        <button id="btcourse" class="btn btn-info">Course</button>
                        <button id="btinstractor" class="btn btn-info">Instractor</button>
                        <button id="btCourseSaved" class="btn btn-info">Courses Saved</button>

                        <div id="d1" style="min-height: 380px;">





                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-5">
                <div class="card card-user">
                    <div class="image">
                        <div class="image-upload">
                            <label for="file-input">
                                @*<img src="~/Attach/Cover/@Html.ValueFor(n => )" />*@
                            </label>

                        </div>

                    </div>
                    <div class="content">

                        <div class="author">

                            <div class="image-upload avatar border-white" style="margin: 0 auto;">
                                <label for="file-input2">
                                    @*<img src="~/Attach/Profile/@Html.ValueFor(n => n.profile)" style="width: 100%;" />*@
                                </label>


                            </div>

                            <h4 class="title">
                                @Model.UserName<br />

                            </h4>

                        </div>

                        <p class="description text-center">
                            Email: @Model.Email <br />
                            phone: @Model.PhoneNumber <br />
                           


                        </p>
                        <div class=" description text-center">@Html.ActionLink("Edit", "EditProfile", "Account", new { id = Model.Id }, new { @class = "btn btn-info " })</div>

                    </div>
                    <hr>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-3 col-md-offset-1">
                                <h5><br /><small>Files</small></h5>
                            </div>
                            <div class="col-md-4">
                                <h5><br /><small>Used</small></h5>
                            </div>
                            <div class="col-md-3">
                                <h5><br /><small>Spent</small></h5>
                            </div>
                        </div>
                    </div>
                </div>



            </div>


        </div>
    </div>
</div>
